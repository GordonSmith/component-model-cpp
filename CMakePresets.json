{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 1
    },
    "configurePresets": [
        {
            "name": "default"
        },
        {
            "name": "vcpkg",
            "displayName": "vcpkg",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "binaryDir": "${sourceDir}/build",
            "installDir": "${sourceDir}/build/stage",
            "cacheVariables": {
                "VCPKG_INSTALLED_DIR": "${sourceDir}/build/vcpkg_installed",
                "VCPKG_INSTALL_OPTIONS": "--x-abi-tools-use-exact-versions;--downloads-root=${sourceDir}/build/vcpkg_downloads;--x-buildtrees-root=${sourceDir}/build/vcpkg_buildtrees;--x-packages-root=${sourceDir}/build/vcpkg_packages"
            },
            "hidden": true
        },
        {
            "name": "Debug",
            "installDir": "${sourceDir}/build/stage/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "ON",
                "BUILD_SAMPLES": "ON"
            },
            "hidden": true
        },
        {
            "name": "Release",
            "installDir": "${sourceDir}/build/stage/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "hidden": true
        },
        {
            "name": "RelWithDebInfo",
            "installDir": "${sourceDir}/build/stage/RelWithDebInfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            },
            "hidden": true
        },
        {
            "name": "MinSizeRel",
            "installDir": "${sourceDir}/build/stage/MinSizeRel",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            },
            "hidden": true
        },
        {
            "name": "linux",
            "cacheVariables": {},
            "hidden": true
        },
        {
            "name": "windows",
            "cacheVariables": {},
            "hidden": true
        },
        {
            "name": "ninja",
            "generator": "Ninja",
            "hidden": true
        },
        {
            "name": "VS-16",
            "generator": "Visual Studio 16 2019",
            "architecture": {
                "strategy": "set",
                "value": "x64"
            },
            "hidden": true
        },
        {
            "name": "VS-17",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "strategy": "set",
                "value": "x64"
            },
            "toolset": {
                "strategy": "set",
                "value": "host=x64"
            },
            "hidden": true
        },
        {
            "name": "linux-ninja-Debug",
