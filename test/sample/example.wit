package example:my-game;

interface my-plugin-api {
  record coord {
    x: u32,
    y: u32,
  }

  get-position: func() -> coord;
  set-position: func(pos: coord);

  record monster {
    name: string,
    hp: u32,
    pos: coord,
  }

  monsters: func() -> list<monster>;
}

interface my-expectations {
  record coord {
    x: u32,
    y: u32,
  }

  record monster {
    name: string,
    hp: u32,
    pos: coord,
  }

  get-monster: func() -> monster;
}

world my-game {
  // import print: func(msg: string);
  import my-plugin-api;
  export my-expectations;

  export run: func();
}
